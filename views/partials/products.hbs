<div class="row">
    {{#each products}}
    <div class="col-12 col-lg-3 p-lg-1 d-flex">
        <div class="d-flex px-2 flex-column border product">
            <header>
                {{#if imagePath}}
                <img class="w-100" src="{{imagePath}}" alt="{{title}}"> {{/if}}
                <a class="text-dark my-2" href="/product/{{_id}}">{{title}}</a>
            </header>
            <main style="flex-grow: 1;">
                <small class="text-secondary">{{ellipsis description 140}}</small>
            </main>
            <footer class="mt-2 text-right">
                {{#if price}}
                <h5>
                    <a href="/cart/add-to-cart/{{_id}}" class="text-dark"><i class="fas fa-cart-arrow-down"></i></a> {{price}} грн</h5>
                {{else}}
                <h5 class="text-muted">
                    <i class="fas fa-cart-arrow-down"></i>
                </h5>
                {{/if}}
            </footer>
        </div>
    </div>
    {{/each}}
</div>
<div class="row">
    <div class="col-12">
        
    </div>
</div>