{{> messages}}
<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/admin/">Панель управления</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/admin/products/">Продукты</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/admin/product/{{product.id}}">{{product.title}}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Данные</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <hr> {{> messages}}
        <div class="row">
            <div class="col-md-6">
                <h2>Поля продукта</h2>
                <form action="/admin/product/{{product.id}}/data" method="POST">
                    {{#each fields}}
                    <div class="form-group">
                        <label for="{{this.name}}">{{this.name}}</label>
                        <input type="text" class="form-control" name="{{this._id}}" value="{{this.fieldValue}}">
                    </div>
                    {{/each}}
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <button type="submit" class="btn btn-success">Сохранить</button>
                </form>
            </div>
            <div class="col-md-6">
                <form action="/admin/product/{{product.id}}/add-category" method="POST">
                    <div class="form-group">
                        <label for="categoryFormControlSelect">Добавить категорию</label>
                        <select class="form-control" id="categoryFormControlSelect" name="categorySelect">
                            {{#each categories}}
                            <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <button type="submit" class="btn btn-success">Добавить</button>
                </form>
                <div class="row mt-3">
                    <div class="col-12">
                        {{#each productCategories}}
                        <span class="badge badge-secondary">{{this.name}}
                            <i class="far fa-dot-circle"></i>
                        </span>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>