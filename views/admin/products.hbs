<div class="row">
    <div class="col-12 col-lg-3">
        {{> adminNavigation}}
    </div>
    <div class="col-12 col-lg-6">
        <div class="row mb-2">
            <div class="col-12">
                <a href="/admin/product" class="btn btn-primary float-right">Добавить продукт</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h3>Продукты</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Название</th>
                            <th scope="col">UAH</th>
                            <th scope="col">USD</th>
                            <th scope="col">Код товара</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.price}} грн.</td>
                            <td>${{this.USDprice}}</td>
                            <td>{{article}}</td>
                            <td>
                                <a href="/admin/product/{{this._id}}" class="text-info">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>