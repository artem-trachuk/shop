{{> messages}}
<div class="row">
    <div class="col-12 col-lg-6 offset-lg-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/admin/">Панель управления</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/admin/categories/">Категории</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/admin/category/{{category._id}}">{{category.name}}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Поля категории</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-lg-4 offset-lg-4">
        <h2>{{category.title}}</h2>
        <form action="/admin/category/{{category._id}}/field" method="post">
            <div class="form-group">
                <label for="name">Название поля</label>
                <input class="form-control" type="text" id="name" name="name" required>
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <div class="clearfix">
                <button class="btn btn-primary float-left" type="submit">Добавить поле</button>
            </div>
        </form>
        <div class="row mt-3">
            <div class="col-12">
                {{#each fields}}
                <span class="badge badge-secondary">{{this}} <i class="far fa-dot-circle"></i></span> {{/each}}
            </div>
        </div>
    </div>
</div>