{{> messages}}
<div class="row">
    <div class="col-12 col-lg-3">
        {{> adminNavigation}}
    </div>
    <div class="col-12 col-lg-6">
        <div class="row mb-2">
            <div class="col-12">
                <a href="/admin/category" class="btn btn-primary float-right">Создать категорию</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h3>Категории</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Название</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>
                                <a href="/admin/category/{{this._id}}" class="text-info">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>