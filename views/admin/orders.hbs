<div class="row">
    <div class="col-md-3">{{> adminNavigation}}</div>
    <div class="col-md-9">
        <h2>Заказы</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Время</th>
                    <th scope="col">Пользователь</th>
                    <th scope="col">Номер заказа</th>
                    <th scope="col">Статус</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{date}}</td>
                    {{#if user}}
                    <td><a target="_blank" class="text-primary" href="https://www.facebook.com/{{user.fbId}}"><i class="fab fa-facebook-square"></i></a> {{user.displayName}}</td>
                    {{else}}
                    <td class="font-italic text-secondary">(гостевой сеанс)</td>
                    {{/if}}
                    <td>{{article}}</td>
                    {{#if state}}
                    <td>{{state}}</td>
                    {{else}}
                    <td class="font-italic text-secondary">(не указан)</td>
                    {{/if}}
                    <td><a href="/admin/order/{{this.id}}"><i class="fas fa-arrow-right"></i></a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>