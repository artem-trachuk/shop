<div class="row">
    <div class="col-md-3">{{> adminNavigation}}</div>
    <div class="col-md-9">
        <h2>Заказы</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Время</th>
                    <th scope="col">Пользователь</th>
                    <th scope="col">Номер заказа</th>
                    <th scope="col">Статус</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{showDate this.orderDate}}</td>
                    <td>{{this.user}}</td>
                    <td>{{article}}</td>
                    <td>{{statusSwitch status}}</td>
                    <td><a href="/admin/order/{{this.id}}"><i class="fas fa-arrow-right"></i></a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>