<div class="row">
    <div class="col-12 col-lg-6 offset-lg-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/admin/">Панель управления</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/admin/payment">Шаблоны оплаты</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Редактор</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-12 col-lg-6 offset-lg-3">
        <form class="bg-light p-2" action="/admin/payment/editor/{{payment.id}}" method="POST">
            {{#if payment}}
            <h5 class="text-success">{{payment.name}}</h5>
            {{else}}
            <h5 class="text-success">Добавить шаблон оплаты</h5>
            {{/if}}
            <div class="form-group">
                <label for="name">Название</label>
                <input class="form-control" type="text" name="name" required value="{{payment.name}}">
            </div>
            <div class="form-group">
                <label for="description">Описание</label>
                <textarea class="form-control" name="description" id="" rows="3" required>{{payment.description}}</textarea>
                <small>Описание отображается в корзине и при оформлении заказа.</small>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="show" id="show" {{#if payment.show}}checked{{/if}}>
                <label class="form-check-label" for="show">Отображать шаблон для покупателей</label>
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-success">Сохранить</button>
        </form>
        {{#if payment}}
        <hr> {{#each payment.fields}}
        <div>
            <form class="form-inline" action="/admin/payment/editor/{{../payment.id}}/change-field/{{id}}" method="POST">
                <div class="form-group mb-2 mr-2">
                    <input type="text" class="form-control" name="field" id="field" value="{{field}}">
                </div>
                <div class="form-check mr-2">
                    <input type="checkbox" class="form-check-input" name="isRequired" id="isRequired" {{#if required}}checked{{/if}}>
                    <label class="form-check-label" for="exampleCheck1">Обязательное для заполнения</label>
                </div>
                <input type="hidden" name="_csrf" value="{{ ../csrfToken }}">
                <button type="submit" class="btn btn-success mb-2">Изменить</button>
            </form>
        </div>
        {{/each}}
        <hr>
        <form class="form-inline" action="/admin/payment/editor/{{payment.id}}/add-field" method="POST">
            <div class="form-group mb-2 mr-2">
                <input type="text" class="form-control" name="field" id="field" placeholder="Название поля">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-primary mb-2">Добавить</button>
        </form>
        {{/if}}
    </div>
</div>