<div class="row">
    <div class="col-12 col-lg-3">
        {{> adminNavigation}}
    </div>
    <div class="col-12 col-lg-6">
        <h2>Отзывы</h2>
        {{#each reviews}}
            <h6 class="text-right">
                <a target="_blank" class="text-primary" href="https://www.facebook.com/{{user.fbId}}"><i class="fab fa-facebook-square"></i></a> {{user.displayName}}
            </h6>
            <small class="d-block text-right"><span class="text-secondary">{{date}}</span></small>
            <p>{{review}}</p>
            <hr>
        {{/each}}
    </div>
</div>