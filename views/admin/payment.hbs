<div class="row">
    <div class="col-12 col-lg-6 offset-lg-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/admin/">Панель управления</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/admin/shipping-and-payment/">Доставка и оплата</a>
                </li>
                <li class="breadcrumb-item">
                    Оплата
                </li>
                <li class="breadcrumb-item active" aria-current="page">{{payment.name}}</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-12 col-lg-6 offset-lg-3">
        <form action="/admin/shipping-and-payment/payment/{{payment.id}}" method="POST">
            <div class="form-group">
                <label for="name">Название</label>
                <input type="text" class="form-control" value="{{payment.name}}" name="name">
            </div>
            <div class="form-group">
                <label for="description">Описание</label>
                <textarea class="form-control" name="description" id="description" rows="3">{{payment.description}}</textarea>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            </div>
            <button type="submit" class="btn btn-success">Сохранить</button>
        </form>
    </div>
</div>