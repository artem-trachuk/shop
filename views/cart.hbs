{{> messages}}
<div class="row">
    {{#if products}}
    <div class="col-6 col-lg-6 offset-lg-3">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item">
                <a href="/"><i class="fas fa-minus"></i></a>
                <a href="/add-to-cart/{{this.item._id}}"><i class="fas fa-plus"></i></a>
                <strong>{{this.item.title}}</strong>
                <span>{{this.qty}} шт.</span>
                <span>{{this.price}} грн</span>
            </li>
            {{/each}}
        </ul>
        <h2 class="text-success">Общая стоимость: {{totalPrice}} грн</h2>
        <a class="btn btn-success block float-right" href="/checkout" role="button">Оформить заказ</a>
    </div>
    {{else}} no product {{/if}}
</div>