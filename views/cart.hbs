<div class="row">
    {{#if products}}
    <div class="col-sm-6">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item">
                <span class="badge">{{this.qty}}</span>
                <strong>{{this.item.title}}</strong>
                <span>{{this.price}}</span>
            </li>
            {{/each}}
        </ul>
        {{totalPrice}}
        <hr>
        <a class="btn btn-success" href="/checkout" role="button">Оформить заказ</a>
    </div>
    {{else}} no product {{/if}}

</div>